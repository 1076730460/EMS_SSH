<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
			http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
			http://www.springframework.org/schema/context
			http://www.springframework.org/schema/context/spring-context-4.1.xsd">
	<!-- 加载配置文件 -->
	
	<context:property-placeholder location="classpath:config.properties"/>
	<!-- 扫描service自动注入为bean -->
	<context:component-scan base-package="com.ems.service.impl,com.ems.dao.impl" />
	<!-- action -->
	<bean name="userAction" class="com.ems.action.UserAction" scope="prototype"></bean>
	<bean name="homeAction" class="com.ems.action.HomeAction" scope="prototype"></bean>
	<bean name="questionAction" class="com.ems.action.TestquestionAction" scope="prototype"></bean>
	<bean name="parperAction" class="com.ems.action.TestParperAction" scope="prototype"></bean>
	<bean name="postAction" class="com.ems.action.PostAction" scope="prototype"></bean>
	<bean name="typeAction" class="com.ems.action.TypeAction" scope="prototype"></bean>
	
</beans>